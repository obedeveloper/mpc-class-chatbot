---
import '../styles/global.css';
import BaseHead from './BaseHead.astro';
import OpenGraph from './OpenGraph.astro';
import { PAGE_TITLE, PAGE_DESC } from '../consts';
import Nav from '../components/Nav.astro';

interface Props {
  title?: string;
}

const { title = PAGE_TITLE } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta name="description" content={PAGE_DESC} />
    <BaseHead />
    <OpenGraph desc={PAGE_DESC} title={PAGE_TITLE} />
  </head>
  <body class="dark:bg-black dark:text-white">
    <Nav />
    <slot />
  </body>
</html>
