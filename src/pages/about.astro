---
import { PAGE_TITLE } from '../consts';
import Layout from '../layouts/Layout.astro';
import readme from '/README.md?raw';
import ShowDown from 'showdown';

const converter = new ShowDown.Converter();
const html = converter.makeHtml(readme);
---

<Layout title=`About - ${PAGE_TITLE}`>
  <main
    set:html={html}
    class="prose lg:prose-lg prose-headings:my-3 px-4 mb-4
    prose-h1:my-5 prose-h1:text-center prose-li:my-0 prose-neutral dark:prose-invert"
  />
</Layout>
